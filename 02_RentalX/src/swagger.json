{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX API Documentation",
    "description": "This is a Rent Car API",
    "version": "1.0.0",
    "contact": {
      "name": "RentalX",
      "url": "http://rentalx.com",
      "email": "thecapellett@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Create new category",
        "description": "Create new car category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Sedan"
                  },
                  "description": {
                    "type": "string",
                    "example": "Sedan car"
                  }
                },
                "example": {
                  "name": "Sedan",
                  "description": "Sedan car"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success: Created Category"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "List all categories",
        "description": "List all categories",
        "responses": {
          "200": {
            "description": "Success: Get all categories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "format": "int64"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
